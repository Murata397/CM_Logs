<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>User info</h2>
      <%= form_for @user, html: { enctype: "multipart/form-data" } do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary", data: { disable_with: "Update User" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>