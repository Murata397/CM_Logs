<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2>User info</h2>
      <%= form_for @user, html: { enctype: "multipart/form-data" } do |f| %>
        <div class="form-group">
          <%= f.label :ユーザー名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "ユーザー更新", class: "btn btn-primary", data: { disable_with: "Update User" } %>
          <%= link_to "マイページ", user_path(current_user), class: "btn btn-secondary" %>
          <%= button_to '退会', unsubscribe_user_path(current_user),method: :delete,data: { confirm: "本当に退会しますか？" },class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>