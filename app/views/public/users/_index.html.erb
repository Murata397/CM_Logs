<table class="table table-honor table-inverse">
  <thead>
       <tr>
       <th>image</th>
       <th>name</th>
       <th>introduction</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <% users.each do |user| %>
       <tr>
        <td class="w-25">
          <%= image_tag user.get_profile_image, class:"img-fluid", alt:"User Image" %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to '詳細', user_path(user), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>