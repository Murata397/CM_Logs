<% if maintenance.favorited_by?(current_user) %>
  <%= link_to maintenance_favorites_path(maintenance), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= maintenance.favorites.count %>
  <% end %>
<% else %>
  <%= link_to maintenance_favorites_path(maintenance), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= maintenance.favorites.count %>
  <% end %>
<% end %>
