<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Favorites List</h1>
      <table class="table table-honer table-inverse">
        <thead>
          <tr>
            <th>車種</th>
            <th>タイトル</th>
            <th>作業日</th>
            <th>作業内容</th>
            <th>作業難易度</th>
          </tr>
        </thead>
        <tbody>
          <% @favorites.each do |favorite| %>
            <tr>
              <td><%= favorite.maintenance.car.car_name %></td>
              <td><%= link_to favorite.maintenance.title, maintenance_path(favorite.maintenance) %></td>
              <td><%= favorite.maintenance.maintenance_day %></td>
              <td><%= favorite.maintenance.maintenance %></td>
              <td><%= favorite.maintenance.work_difficulty %></td>
              <td><%= link_to 'ユーザー', user_path(favorite.maintenance.user_id), class: 'btn btn-primary' %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
