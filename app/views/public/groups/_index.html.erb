<table class='table table-striped'>
  <thead>
    <tr>
      <th>グループ画像</th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
      <td><%= image_tag url_for(group.group_image.first), size:'300x300' %></td>
        <td><%= group.group_name %></td>
        <td><%= group.group_introduction %></td>
        <td><%= link_to '詳細', group, class: "group_#{group.id} btn btn-success" %></td>
        <% if group.is_owner_by?(current_user) %>
          <td><%= link_to '編集', edit_group_path(group), class: "group_#{group.id} btn btn-primary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>