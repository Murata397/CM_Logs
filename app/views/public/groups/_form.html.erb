<%= form_with model: group, local: true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %>
    <%= f.text_field :group_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :group_introduction, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :グループ画像 %>
    <%= f.file_field :group_image, class: "form-control-file", accept: 'image/*' %>
  </div>

  <div class="form-group">
    <%= f.label :グループテーマ %>
    <%= f.text_field :group_theme, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :グループルール %>
    <%= f.text_area :group_rules, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>